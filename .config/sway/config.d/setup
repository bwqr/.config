# Devices
input "type:mouse" {
}

input "type:keyboard" {
	xkb_layout us,tr
	xkb_options grp:alt_shift_toggle,caps:escape
	repeat_delay 300
	repeat_rate 30
}

output HDMI-A-2 resolution 1920x1080@75Hz position 0,0 bg '~/Pictures/wallpapers/wp11345838-gentoo-linux-wallpapers.jpeg' stretch

titlebar_padding 8 1
titlebar_border_thickness 0
font monospace 9

workspace_auto_back_and_forth yes

assign [app_id="thunderbird"] 3
assign [app_id="rhythmbox"] 3
assign [app_id="firefox"] 1
for_window [urgent=latest] focus
for_window [shell="xwayland"] title_format "%title [XWayland]"
for_window [title="Firefox â€” Sharing Indicator"] floating enable
for_window [title="Picture-in-Picture"] floating enable

gaps outer 0
gaps inner 4
smart_gaps on

smart_borders on
default_border pixel 2

seat seat0 xcursor_theme BreezeX-Dark 30

set $gnome-schema org.gnome.desktop.interface
exec_always {
    gsettings set $gnome-schema gtk-theme 'Adwaita-dark'
    gsettings set $gnome-schema icon-theme 'breeze-dark'
    gsettings set $gnome-schema cursor-theme 'BreezeX-Dark'
    gsettings set $gnome-schema font-name 'Noto Sans 11'
}

## Base16 Ocean
# Author: Chris Kempson (http://chriskempson.com)

set $base00 #2b303b
set $base01 #343d46
set $base02 #4f5b66
set $base03 #65737e
set $base04 #a7adba
set $base05 #c0c5ce
set $base06 #dfe1e8
set $base07 #eff1f5
set $base08 #bf616a
set $base09 #d08770
set $base0A #ebcb8b
set $base0B #a3be8c
set $base0C #96b5b4
set $base0D #8fa1b3
set $base0E #b48ead
set $base0F #ab7967

#                       Border  BG      Text    Ind     Child Border
client.focused          $base0D $base0D $base00 $base0D $base0D
client.focused_inactive $base01 $base01 $base05 $base03 $base01
client.unfocused        $base01 $base00 $base05 $base01 $base01
client.urgent           $base08 $base08 $base00 $base08 $base08
client.placeholder      #181818 #181818 #d8d8d8 #181818 #181818
client.background       #f8f8f8
