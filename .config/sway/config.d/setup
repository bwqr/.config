set $gnome-schema org.gnome.desktop.interface
exec_always {
    gsettings set $gnome-schema gtk-theme 'Graphite-dark'
    gsettings set $gnome-schema icon-theme 'breeze-dark'
    gsettings set $gnome-schema cursor-theme 'BreezeX-Light'
    gsettings set $gnome-schema font-name 'Noto Sans 11'
}

